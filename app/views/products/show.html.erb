<div id="product-details-<%=@product.id%>">
  <%= render 'product_details', :item => @product %>
</div>

<% if admin %>
  <%= form_for @product, remote: true, authenticity_token: true do |f| %>
    Name: <%= f.text_field :name %>
    Description: <%= f.text_field :description %>
    Price: <%= f.number_field :price, min: 0.01, step: 0.01 %>
    Image: <%= f.file_field :image %>
    <%= f.submit "Submit" %>
  <% end %>
<% end %>
