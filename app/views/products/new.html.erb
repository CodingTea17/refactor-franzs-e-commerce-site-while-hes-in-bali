<%= render "layouts/errors", :object => @product %>

<h1>Add a product.</h1>

  <%= form_for @product do |f| %>
    Name: <%= f.text_field :name %>
    Description: <%= f.text_field :description %>
    Price: <%= f.number_field :price, min: 0.01, step: 0.01 %>
    Image: <%= f.file_field :image %>
  <%= f.submit "Submit" %>

<% end %>
