<!DOCTYPE html>
<html>
  <head>
    <title>Week3CodeReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li id="items-in-cart"><%= link_to "Cart | Total items: #{ cart_items }", cart_path %></li>
        <li><%= link_to "See all products", products_path %></li>
        <% if current_user %>
          <% if current_user.admin %>
            <li><%= link_to "New Product", new_product_path %></li>
          <% end %>
          <li><%= current_user.email %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>
    <%= render "layouts/flash" %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
